@model IEnumerable<FusionWeb.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<div class="title">פניות</div>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.InfoClient.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoClient.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoClient.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.InfoClient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InfoClient.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InfoClient.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">הצג</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">מחק</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Css{
    <link rel="stylesheet" href="~/css/Contact.css" />
    <link rel="stylesheet" href="~/css/Index.css" />
}