@model FusionWeb.Models.Manager

@{
    ViewData["Title"] = "LogIn";
}

<div class="row">

    <form asp-action="LogIn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <div class="card-title text-center">התחברות</div>

                    <div class="form-group form-label-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" type="email" id="inputEmail" placeholder="אימייל" required autofocus />
                        <span asp-validation-for="UserName" class="text-danger" for="inputEmail"></span>
                    </div>


                    <div class="form-group form-label-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" id="inputPassword" placeholder="סיסמא" required />
                        <span asp-validation-for="Password" class="text-danger" for="inputPassword"></span>
                    </div>
                </div>
                <input type="submit" value="התחבר" class="btn btn-primary btn-lg btn-block text-uppercase mang" />
               
                
                <form asp-action="Create">
                    <input type="submit" value="צור חשבון" class="btn btn-primary btn-lg btn-block text-uppercase mang" />
                </form>

                @if (ViewData["Error"] != null)
                {
                    <div style="color:red; font-weight:bold">@ViewData["Error"]</div>
                }



            </div>
        </div>


    </form>







</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


@section Css
    {
    <link rel="stylesheet" href="~/css/signIn.css">
    @*<link rel="stylesheet" href="navbar.css">*@

}
