@model FusionWeb.Models.Manager
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <form asp-action="LogIn" method="get">
        <input type="submit" value="משתמש קיים" class="btn btn-primary btn-lg btn-block text-uppercase" />
    </form>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <div class="card-title text-center">התחברות-משתמש חדש</div>

                    <div class="form-group form-label-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" type="text" placeholder="שם" />
                        <span asp-validation-for="FullName" class="text-danger" for="input"></span>
                    </div>

                    <div class="form-group form-label-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" type="email" id="inputEmail" placeholder="שם משתמש" />
                        <span asp-validation-for="UserName" class="text-danger" for="inputEmail"></span>
                    </div>


                    <div class="form-group form-label-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" id="inputPassword" placeholder="סיסמא" required />
                        <span asp-validation-for="Password" class="text-danger" for="inputPassword"></span>
                    </div>
                </div>
                <form  asp-action="LogIn">

                    <input type="submit" value="התחבר" class="btn btn-primary btn-lg btn-block text-uppercase" />
                </form>
            </div>
        </div>
    </form>

</div>


@if (Context.Session.GetString("user") != null)
{

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


@section Css
    {
    <link rel="stylesheet" href="~/css/signIn.css" />

}
