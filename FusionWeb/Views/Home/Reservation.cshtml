<body>
    <!--RESERVATION-->
    <div class="container_img">
        <div style="height: 260px; margin-top: 40px;">
            <div class="page-header-bg-image"
                 style="background-image:
              url(https://cdn.pixabay.com/photo/2017/01/26/02/06/platter-2009590_1280.jpg);  ">
                <div class="centered">הזמנת מקום</div>

            </div>

        </div>

        <div class="container">

            <form>
                <div class="contact">
                    <div class="form-group w-50">
                        <label for="formGroupExampleInput">שם מלא</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="הזן/י שם מלא">
                    </div>
                    <div class="form-group w-50">
                        <label for="formGroupExampleInput2">אימייל</label>
                        <input type="email" class="form-control" id="formGroupExampleInput2" placeholder="הזן/י אימייל"
                               required autofocus>
                    </div>
                    <div class="form-group w-50">
                        <label for="formGroupExampleInput2">טלפון</label>
                        <input type="tel" class="form-control" id="formGroupExampleInput2"
                               pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" placeholder="הזן/י טלפון">
                    </div>
                    <div class="form-group w-50">
                        <label for="date">תאריך</label>
                        <input type="date" class="form-control" id="date" placeholder="הזן/י"></textarea>
                    </div>
                </div>

                <div class="form-group w-50">
                    <label for="appt">שעה</label>
                    <input type="time" class="form-control" id="appt" placeholder="הזן/י"></textarea>
                </div>
                <div class="form-group w-50">
                    <label for="quantity">מס' סועדים</label>
                    <input type="number" class="form-control" id="quantity" min="1" max="15" placeholder="הזן/י"></textarea>
                </div>
                <div class="form-group w-50">
                    <label for="subject">הערות</label><br>
                    <textarea id="subject" class="form-control" name="subject" placeholder="הזן/י"
                              style="height:200px"></textarea>&nbsp;&nbsp;<br><br>
                </div>

                <div class="kitchen">

                    <div class="row">
                        <div class="col-sm-5 col-md-5 col-lg-5">
                        </div>


                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label for="kitchens">בחר מטבח</label>
                            <select name="kitchens" id="kitchens">
                                <option value="Israeli">ישראלי</option>
                                <option value="Italie">איטלקי</option>
                                <option value="American">אמריקאי</option>
                                <option value="chaina">סיני</option>
                            </select>
                        </div>

                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <input type="submit" value="הזמן">
                        </div>
                    </div>

                </div>
            </form>
        </div>





