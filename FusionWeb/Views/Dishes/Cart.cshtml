@model Dictionary<FusionWeb.Models.Dish, int>
@using Microsoft.AspNetCore.Http;
<table class="table">
    <thead>
        <tr>
            <th>
                כמות
            </th>
            <th>
                מחיר המנה
            </th>
            <th>
                שם המנה
            </th>

            <th>
                תמונה
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key.Name)
            </td>
            <td><img src="@item.Key.Image" class="card-img dishImg" alt="..." height="80px" ></td>

            <td>
                <a  type="submit" asp-action="Delete" asp-route-id="@item.Key.Id" class="btn btn-light">
                    <svg width="1em" height="1em" viewBox="0 0 16 16"
                         class="bi bi-bag-x" fill="black" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M8 1a2.5 2.5 0 0 0-2.5 2.5V4h5v-.5A2.5 2.5 0 0 0 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V5H2z" />
                        <path fill-rule="evenodd"
                              d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708z" />
                    </svg>
                </a>
            </td>
            @*<td>
         <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
         <a asp-action="Details" asp-route-id="@item.Id">Details</a> |

             <a asp-action="Delete" asp-route-id="@item.Key.Id">Delete</a>
        </td>*@
        </tr>
        }

    </tbody>
</table>
<form asp-action="Index" >
 
    <input  type="submit" class="btn btn-light btn_pay" value="להמשך קניה " />
</form>


<form asp-action="RedirectToPayment" method="get">
    @*<input type="hidden" name="Dishes" id="Dishes" value="1,2,3" />*@
    <input type="submit" class="btn btn-light btn_pay" value="לתשלום" />
</form>

@section Css
    {
    <link rel="stylesheet" href="~/css/Cart.css">
   
}
